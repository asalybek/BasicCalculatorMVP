<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3033"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/dot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="."
                android:textColor="@android:color/white"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="36dp"
                android:text="="
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:paddingHorizontal="16dp"
                android:paddingVertical="22dp"
                android:text="C"
                android:textColor="@color/operationColor"
                android:textSize="32sp" />

            <Button
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="16dp"
                android:text="⌫"
                android:textColor="@color/operationColor"
                android:textSize="32sp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="16dp"
                android:text="÷"
                android:textColor="@color/operationColor"
                android:textSize="32sp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="16dp"
                android:text="×"
                android:textColor="@color/operationColor"
                android:textSize="32sp" />

            <Button
                android:id="@+id/subtract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="16dp"
                android:text="-"
                android:textColor="@color/operationColor"
                android:textSize="32sp" />

            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:padding="16dp"
                android:text="+"
                android:textColor="@color/operationColor"
                android:textSize="32sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>